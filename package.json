{
  "name": "@adonisjs/shield",
  "version": "1.0.5",
  "description": "Adonis shield is middleware to standard HTTP websites to protect themselves from common web attacks like xss, csp and csrf",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "web-security",
    "csrf",
    "csp"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/sink": "^1.0.13",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "nyc": "^11.4.1",
    "semver": "^5.5.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "@adonisjs/generic-exceptions": "^2.0.0",
    "csrf": "^3.0.6",
    "node-cookie": "^2.1.0",
    "node-csp": "^1.0.1",
    "node-guard": "^1.0.0",
    "uuid": "^3.2.1"
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-shield.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-shield/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-shield#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
